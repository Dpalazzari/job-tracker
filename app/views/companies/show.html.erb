<div class='container'>
  <h1>All Jobs for <strong><%= @company.name %></strong></h1><br>
</div>
<div class='container'>
  <%= link_to 'New Job', new_company_job_path(@company), class:"btn btn-success" %>
</div>
<div class='container'>
  <div class='list-group'>
    <% @company.jobs.each do |job| %>
      <li class='list-group'><%= link_to job.title, company_job_path(@company, job) %></li>
      <%= job.description %>
    <% end %>
  </div>
</div>
